{
    "name": "Multi-tab",

    "description": "Open multiple URLs with one click",

    "manifest_version": 2,

    "version": "0.1",

    "browser_action": {
        "default_icon": "multi-tab-16.png"
    },

    "icons": {
        "16": "multi-tab-16.png",
        "128": "multi-tab-128.png"
    },

    "permissions": ["tabs"],

    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },

    "options_page": "options.html",

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
